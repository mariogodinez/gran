@import 'nib';

gris_claro = #f4f3f3

body
	margin 0
	padding 0
	font-size 16px
	font-family arial

#main-header
	background #000
	color white

#main-container
	font-size 1em

.table
	margin 0
	&-left
		width 250px
		&-header
			background gris_claro
			width 99.5%
			height 2.5em
			display flex
			align-items center
			justify-content center
			border-bottom 1px solid #d3d3d3
			border-right 1px solid #d3d3d3
			&-input
				width 90%
				height 100%
				height 20px

.info
	width 100%
	height 60px
	border-bottom 1px solid gris_claro
	&-item
		width 70px
		border-right 1px solid #d3d3d3
		display flex
		p
			margin 0
			display flex
			justify-content center
			align-items center
			text-align center
			font-size .7em
			width 100%
		&:last-child 
			width 50px
			


#info-data
	width 100%
	height 2em
	border-bottom 1px solid gray
	&:last-child
		border-bottom 0
	.info-item
		border-right 1px solid #d3d3d3
		p
			background gris_claro
			input
				border 1px solid gray
				width 80%
				height 60%
				border 1px solid gray
		&:last-child 
			width 3.2em
			
		

			
